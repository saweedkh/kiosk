# =============================================================================
# KIOSK BACKEND - Environment Variables
# =============================================================================
# کپی کنید به .env و مقادیر را تنظیم کنید
# =============================================================================

# Django Core
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,kiosk.local
SERVER_PORT=8000

# Payment Gateway
PAYMENT_GATEWAY_NAME=mock
PAYMENT_GATEWAY_MERCHANT_ID=
PAYMENT_GATEWAY_TERMINAL_ID=

# Mock Gateway (فقط برای PAYMENT_GATEWAY_NAME=mock)
MOCK_PAYMENT_DELAY=3
MOCK_PAYMENT_SUCCESS=True

# POS Configuration (فقط برای PAYMENT_GATEWAY_NAME=pos)
POS_TCP_HOST=192.168.1.100
POS_TCP_PORT=1362
POS_TIMEOUT=30

# POS Message Format
# Options:
# - dll_exact: بدون prefix/suffix (default DLL)
# - pardakht_novin_official: با RQ{length} prefix (توصیه می‌شه) ⭐
# - with_rq_and_banner: با banner + RQ prefix
# - with_length: با length prefix (4 digits)
# - with_stx_etx: با STX/ETX
# - with_terminator: با CRLF terminator
# - with_null: با NULL terminator
POS_MESSAGE_FORMAT=pardakht_novin_official

# POS Simple Format (براساس نرم‌افزار واقعی PNA)
# True: استفاده از format ساده (مثل نرم‌افزار رسمی PNA) ⭐
# False: استفاده از format کامل با تمام tags
POS_USE_SIMPLE_FORMAT=True

# POS Banner (اختیاری - برای with_rq_and_banner)
POS_BANNER=R2023tejaratEParsian

# Printer
PRINTER_ENABLED=False
PRINTER_IP=192.168.1.100
PRINTER_PORT=9100
